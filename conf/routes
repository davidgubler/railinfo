# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)


GET     /timetable/departures/:stop     controllers.TimetableController.departures(stop: String)

GET     /admin                          controllers.AdminController.admin(request: Request)
POST    /admin/recalculateEdges         controllers.AdminController.recalculateEdgesPost(request: Request)
GET     /topology/map                   controllers.TopologyController.map(request: Request)
GET     /topology/edges                 controllers.TopologyController.edges(request: Request)
GET     /topology/edges/_create         controllers.TopologyController.create(request: Request)
POST    /topology/edges/_create         controllers.TopologyController.createPost(request: Request)
GET     /topology/edges/:edge/edit      controllers.TopologyController.edit(request: Request, edge: String)
POST    /topology/edges/:edge/edit      controllers.TopologyController.editPost(request: Request, edge: String)
GET     /topology/edges/:edge/delete    controllers.TopologyController.delete(request: Request, edge: String)
POST    /topology/edges/:edge/delete    controllers.TopologyController.deletePost(request: Request, edge: String)
GET     /import                         controllers.DataImportController.index(request: Request)
POST    /import/gtfs                    controllers.DataImportController.importGtfsPost(request: Request)
